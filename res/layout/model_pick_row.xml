<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="2dp">
    <TextView android:id="@+id/model_name"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_alignParentLeft="true"
    	android:layout_alignParentTop="true" />
   	<com.BattleBuilder.widget.NumberPicker android:id="@+id/model_amount_min"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
   	   	android:layout_alignParentRight="true"
    	android:layout_alignParentTop="true"/>
   	<com.BattleBuilder.widget.NumberPicker android:id="@+id/model_amount_max"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_alignParentRight="true"
    	android:layout_below="@id/model_amount_min" />
   	<com.BattleBuilder.widget.NumberPicker android:id="@+id/model_amount_weapon"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_alignParentRight="true"
    	android:layout_below="@id/model_amount_max" />
    <TextView android:id="@+id/model_cost_min"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_toLeftOf="@id/model_amount_min"
    	android:layout_alignTop="@id/model_amount_min"/>
    <TextView android:id="@+id/model_cost_max"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_toLeftOf="@id/model_amount_max"
    	android:layout_alignTop="@id/model_amount_max"/>
    <TextView android:id="@+id/model_cost_weapon"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_toLeftOf="@id/model_amount_weapon"
    	android:layout_alignTop="@id/model_amount_weapon" />
</RelativeLayout>